<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
  <title>History | <% if(user.role == "doctor"){ %>
            Doctor
    <% } else{%>
        Patient
      <% } %>
  </title>
  <link href="/css/doctorCard.css" rel="stylesheet">

  <style>
      body{
        background-color: #458ff6;
      };
      .doctorBox{
        background-color: white;
        margin-bottom: 10px;
      };
      #Doctor{
        color: white;
      };
      #description{
        display: flex;
        flex-direction: column;
      }

    </style>
</head>

<body>

  <!-- ======= Doctor section ======= -->
  <section id="team" class="team section-bg">
    <div class="container">
      <a href="/" style="color: white;">
        <h3>Home</h3>
      </a>
      <div class="section-title">
        <h2 style="color: white;"><%= user.role== "doctor" ? "Doctor History" : "Patient History" %></h2>
        <div class="underline"></div>
        <p style="color: white;">Here you can see you medical History!</p>
      </div>
      <div class="row">

        <div class="col-lg-6">
          <!-- Demo doctor-->

          <div class="member align-items-start" class="doctorBox">
            <% preHistory.forEach(function(item) { %>
              <div class="member-info">
              <div id="description" >
                <h4><% if(user.role== "doctor"){ %>
                     <%= item.name %>
                  <% } else{%>

                    <%= item.doctor.name %>
                    <% } %>
                </h4>
                <p>
                  <%= item.description %>
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. Harum, eaque consectetur. Quod, fugiat sapiente distinctio assumenda voluptatum ullam similique rerum voluptatibus quisquam, debitis saepe? Culpa aperiam rem voluptates impedit placeat?
                </p>
                
              </div>

              

              </div>
              <% }) %>
          </div>

        </div>
        <!-- Insert doctors -->



  </section><!-- End Team Section -->


  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>


</body>

</html>